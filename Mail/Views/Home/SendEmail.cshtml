
@{
    ViewBag.Title = "SendEmail";
}
<style>
    /* Style the form container */
    .form-container {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

        /* Style form paragraphs */
        .form-container p {
            margin: 5px 0;
        }

        /* Style text input fields */
        .form-container input[type="text"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        /* Style submit button */
        .form-container input[type="submit"] {
            background-color: #007bff;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

    /* Style error messages */
    .error-message {
        color: #f00;
        font-weight: bold;
    }
</style>

<h2 style="text-align:center">Send Email</h2>

<div class="form-container">
    @using (Html.BeginForm())
    {
        <p>From</p> @Html.TextBox("from", null, new { @class = "form-control" })
        <br />
        <p>To</p> @Html.TextBox("mail", null, new { @class = "form-control" })
        <br />
        <p>Subject</p> @Html.TextBox("subject", null, new { @class = "form-control" })
        <br />
        <p>Body</p> @Html.TextBox("content", null, new { @class = "form-control" })
        <br />

        <input type="submit" id="bntsubmit" value="Send" class="btn btn-primary" />
        <br />
        <span class="error-message">@ViewBag.Error</span>
    }
</div>
